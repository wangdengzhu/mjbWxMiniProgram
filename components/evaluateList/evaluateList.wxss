.text-ellipsis{
  color: #FF681D;
  font-size: 26rpx;
  display:inline-block;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 2rpx;
}
.text-ellipsis>view{
  float: left;
}
.text-ellipsis>view:first-child{
  width: 26rpx;
  height:26rpx;
}
.text-ellipsis>view:first-child::after{
  content: '';
  display: block;
  width: 13rpx;
  height: 13rpx;
  border:3rpx solid #FF681D;
  border-left:0;
  border-bottom:0;
}
.text-ellipsis.expand>view:first-child::after{
  transform: rotate(135deg);
  margin-top: 12rpx;
}
.text-ellipsis.collapse>view:first-child::after{
  transform: rotate(-45deg);
  margin-top: 16rpx;
}


.comment{
    position:relative;
  color:#666666;
  padding:33rpx 0 0;
  margin-bottom: 18rpx;
  font-size: 28rpx;
  max-height: 192rpx;
  overflow: hidden;
  line-height: 1.4;

}
.comment.expand{
  max-height:none;
}

.comment.special{
  width: 690rpx;
  max-height: 75rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
