/* components/evaluateList/evaluateGoods.wxss */
.goodslist-item {
  display: flex;
  padding: 20rpx 32rpx;
  height: 200rpx;
}

.goodslist-pic {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}

.goodslist-pic image {
  width: 100%;
  height: 100%;
}

.goodslist-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 25rpx;
  color: #333;
  font-size: 26rpx;
}

.gl-name-wrap {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gl-format {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 37rpx;
}

.gl-bot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gl-price {
  color: #333;
}

.gl-num {
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.gl-eval button {
  /* width: 160rpx; */
  height: 64rpx;
  font-size: 24rpx;
  background-color: #fff;
  border: 2rpx solid #ff681d;
  color: #ff681d;
}

.gl-eval button::after {
  border: none;
}