/* pages/evaluate/evalSuccess.wxss */

.top {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  position: relative;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(#ff8f1d, #ff681d);
  overflow: hidden;
}

.top>text {
  font-size: 30rpx;
}

.top>button {
  font-size: 26rpx;
  background: none;
  color: #fff;
  padding: 0 35rpx;
  margin-top: 32rpx;
}

.top>button::after {
  border-color: #fff;
}

.round1 {
  position: absolute;
  top: 46rpx;
  left: 67rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-size: 6rpx 6rpx;
  background-image: -webkit-gradient(linear, 0 0, 0 100%, color-stop(0.2, rgba(255, 255, 255, 0.5)), color-stop(0.2, transparent), to(transparent));
  opacity: 0.4;
  transform: rotate(45deg);
}

.round2 {
  position: absolute;
  top: 65rpx;
  left: 528rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #fe9241;
  opacity: 0.6;
}

.round3 {
  position: absolute;
  top: 24rpx;
  left: 664rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #fe9241;
}

.round4 {
  position: absolute;
  top: 138rpx;
  left: 226rpx;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background-color: #fe8237;
  opacity: 0.7;
}

.round5 {
  position: absolute;
  top: 149rpx;
  left: 551rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-size: 8rpx 8rpx;
  background-image: linear-gradient(-45deg, rgba(255, 255, 255, 0.2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0.2) 75%, transparent 75%, transparent);
}

.con-eval {
  padding: 32rpx;
  border-bottom: 1px solid #e5e5e5;
}

.con-eval-text::before {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 26rpx;
  top:7rpx;
  left: 0;
  background-color: #ff681d;
}

.con-eval-text {
  position: relative;
  font-size: 28rpx;
  color: #333;
  padding: 0 15rpx;
}
.goodslist-item {
  display: flex;
  padding: 20rpx 32rpx;
  height: 200rpx;
}

.goodslist-pic {
  width: 200rpx;
}

.goodslist-pic image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.goodslist-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 25rpx;
  color: #333;
  font-size: 26rpx;
}

.gl-name-wrap {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gl-format {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 37rpx;
}

.gl-bot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gl-price {
  color: #333;
}

.gl-num {
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.gl-eval button {
  /* width: 160rpx; */
  height: 64rpx;
  font-size: 24rpx;
  background-color: #fff;
  border: 1rpx solid #ff681d;
  color: #ff681d;
}

.gl-eval button::after {
  border: none;
}

/* 无评价商品 */
.look-around {
  font-size: 28rpx;
  background-color: #fff;
  color: #ff681d;
  margin-top: 53rpx;
}

.look-around::after {
  border-color: #ff681d;
}
.loading-container{
  margin-top:10rpx;
}
 