/* components/brandList/brandList.wxss */

.brandlist-box {
  padding: 40rpx 32rpx 0;
}
.brandlist-item:not(:last-child) {
  margin-bottom: 40rpx;
}
.brand-pic {
  position: relative;
  width: 100%;
  height: 292rpx;
}
.brand-pic image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

.brand-info {
  width: 100%;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  background-color: #f5f5f5;
  border-radius: 0 0 20rpx 20rpx;
}
.brand-info view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bli-name {
  padding-left: 24rpx;
  font-size: 28rpx;
}
.bli-num {
  padding-right: 45rpx;
  font-size: 28rpx;
}

.brand-sub {
  width: 100%;
  margin-top: 10rpx;
  padding-left: 24rpx;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
}
.brand-sub text {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}