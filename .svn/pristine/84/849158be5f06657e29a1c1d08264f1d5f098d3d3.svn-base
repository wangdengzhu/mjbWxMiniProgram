/* pages/aftersale/apply/apply.wxss */

.wrap {
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}
.block {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.block-text {
  font-size: 28rpx;
  color: #333;
}

.service-type {
  padding: 32rpx;
}
.service-type .btn-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}
.service-type .btn {
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  color: #333;
  font-size: 28rpx;
}
.service-type .btn.btn-active {
  color: #ff681d;
  border-color: #ff681d;
}
.service-type .btn.btn-disabled {
  color: #ccc;
}

.goods-wrap {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}
.goods-wrap .goods-pic {
  width: 160rpx;
  height: 160rpx;
}
.goods-wrap .goods-pic image {
  display: block;
  width: 100%;
  height: 100%;
}
.goods-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  margin-left: 24rpx;
}

.goods-top {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}
.goods-title {
  flex: 1;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}
.goods-price {
  margin-left: 54rpx;
}

.goods-sub-title {
  flex: 1;
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.spec {
  font-size: 22rpx;
  color: #999;
}
.num {
  font-size: 26rpx;
  color: #333;
}

.refund-total-wrap {
  border-bottom: 1rpx solid #e5e5e5;
  height: 88rpx;
}
.num-ctrl-wrap {
  display: flex;
  align-items: center;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  font-size: 28rpx;
  height: 50rpx;
  box-sizing: border-box;
}
.num-ctrl-wrap view {
  text-align: center;
  height: 100%;
  line-height: 48rpx;
}
.minus,
.plus {
  width: 60rpx;
}
.refund-num {
  width: 70rpx;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.refund-price-wrap {
  height: 88rpx;
}
.refund-price {
  color: #ff681d;
  font-size: 28rpx;
}

.descript-wrap .block-text {
  line-height: 88rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #ccc;
}
textarea {
  font-size: 28rpx;
  color: #666;
  width: 100%;
  height: 200rpx;
  padding-left: 0;
}
textarea.ios {
  margin-left: -6rpx;
}
.text-tips {
  text-align: right;
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.upload-img-wrap {
  border-top: 1rpx solid #e5e5e5;
  padding-top: 24rpx;
}
.upload-img-wrap .block-text {
  margin-bottom: 24rpx;
}

.imgs-wrap>view {
  width: 212rpx;
  height: 212rpx;
  box-sizing: border-box;
}
.upload-btn {
  border: 1rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}
.upload-btn .camera {
  width: 64rpx;
  height: 60rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/aftersale/camera.png);
  background-size: 100%;
  margin-bottom: 14rpx;
}
.submit-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  background-color: #ff681d;
  border-radius: 0;
}

.imgs-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.address-detail {
  border-top: 1rpx solid #e5e5e5;
  padding: 24rpx 0;
}
.address-detail view text {
  font-size: 28rpx;
  color: #333;
}
.address-detail view .name {
  margin-right: 40rpx;
}
.address-detail .address {
  margin-top: 24rpx;
  color: #666;
  font-size: 28rpx;
}

.contact-tips {
  margin: 57rpx auto;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.address-hd {
  height: 88rpx;
}

.address-hd .right {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  line-height: 1;
}

.address-hd .right view {
  width: 12rpx;
  height: 22rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/aftersale/right-icon.png);
  background-size: 100%;
  margin-left: 16rpx;
  background-repeat: no-repeat;
}

.redtxt {
  color: #f00;
}
.grey {
  color: #ccc;
}