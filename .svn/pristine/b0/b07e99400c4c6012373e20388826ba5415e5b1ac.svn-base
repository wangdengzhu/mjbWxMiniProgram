/* pages/order/list/list.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
}
.nav view {
  font-size: 30rpx;
  color: #333;
  line-height: 84rpx;
  border-bottom: 4rpx solid transparent;
}
.nav .on {
  color: #ff681d;
  border-bottom: 4rpx solid #ff681d;
}
page {
  min-height: 100%;
}
.list-wrap {
  background-color: #f5f5f5;
  position: absolute;
  top: 88rpx;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
}
.no-order image {
  display: block;
  width: 170rpx;
  height: 170rpx;
  margin: 180rpx auto 38rpx;
}
.no-order text {
  font-size: 32rpx;
  display: block;
  text-align: center;
  color: #999;
}
.list {
  background-color: #f5f5f5;
}
.list .item {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.item-hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 32rpx;
}
.item-hd .time {
  font-size: 26rpx;
  color: #666;
}
.item-hd .state {
  font-size: 28rpx;
  color: #ff681d;
}

.item-body {
  padding: 0 32rpx 26rpx;
}
.item-detail {
  display: flex;
  justify-content: space-between;
  color: #333;
  padding-top: 20rpx;
}
.item-detail image {
  width: 160rpx;
  height: 160rpx;
}
.item-detail .item-info-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  padding-left: 30rpx;
}
.item-info {
  display: flex;
  justify-content: space-between;
}
.item-info .title {
  font-size: 26rpx;
  width: 340rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-info .fr {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.item-info .fr {
  font-size: 26rpx;
}
.item-info .fr .num {
  color: #999;
}

.item-info-wrap .spec {
  font-size: 26rpx;
  color: #999;
}
.item-detail {
  padding-bottom: 20rpx;
}
.item-body navigator {
  border-bottom: 1rpx solid #e5e5e5;
}
.item-spec {
  text-align: right;
  margin: 28rpx 0 0;
  font-size: 26rpx;
}
.item-spec .price {
  font-size: 28rpx;
  color: #ff681d;
}
.item-ctrl {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  margin-top: 28rpx;
}
.item-ctrl .btn {
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  margin-left: 40rpx;
  border-radius:4rpx;
  border:2rpx solid #ccc;
  color: #666;
}
.item-ctrl .go-pay-btn {
  background-color: #ff681d;
  color: #fff;
  border:1rpx solid #ff681d;
}
.wait-time {
  color: #ff681d;
}