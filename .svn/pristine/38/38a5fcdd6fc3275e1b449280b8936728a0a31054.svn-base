<!-- components/filterBar/filterBar.wxml -->
<view class="filter-wrap{{isStatic?' filter-wrap-static':''}}" >
  <view class="filter-tab">
    <view class="{{index==0?'active':''}}" data-index="1"  data-value="{{filterBar[0]}}" catchtap="change">
      新品优先
    </view>
    <view class="{{index==1?'active':''}}" data-index="2"  data-value="{{filterBar[1]}}" catchtap="change">
      综合
    </view>
    <view class="{{index==2?'active':''}}" data-index="3"  data-value="{{filterBar[2]}}" catchtap="change">销量</view>
      <view data-index="4"  class="price {{(index==3&&isAsc?'asc':index==3?'desc':'')+(index==3?' active':'')}}" data-value="{{filterBar[3]}}" catchtap="change">价格<view> </view>
    </view>  
  </view>
</view>


