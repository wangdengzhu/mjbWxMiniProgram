/* components/goodList/goodList3line.wxss */

.goodlist-three {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goodlist-three .item {
  width: 210rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 35rpx;
  font-size: 26rpx;
}
.item-pic {
  width: 100%;
  height: 210rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}
.item-pic image {
  width: 100%;
  height: 100%;
}
.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.item-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 36rpx;
  margin-top: 20rpx;
  margin-bottom: 22rpx;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item-price {
  color: #ff681d;
}