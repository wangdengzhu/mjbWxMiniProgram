/* components/goodList/goodList2line.wxss */

.goodlist-two {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.item {
  display: flex;
  flex-direction: column;
  width: 328rpx;
  padding-bottom: 35rpx;
  font-size: 26rpx;
  height: 100%;
  box-sizing: border-box;
}

.item-pic {
  width: 100%;
  height: 328rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}
.item-pic image {
  width: 100%;
  height: 100%;
}
.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.item-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 36rpx;
  margin-top: 20rpx;
  margin-bottom: 14rpx;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item-price {
  display: flex;
  align-items: center;
}
.item-price .price {
  color: #ff681d;
  font-size: 26rpx;
}
.item-price .market-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 32rpx;
}