/* pages/search/search.wxss */

/* @import '/pages/search/hotSearch.wxss';
@import '/pages/search/searchResult.wxss' */
@import "/components/searchInput/searchInput.wxss";

/* 搜索 Begin */

page{
  min-height: 100%;
}
.search-wrap, .search-result {
  position: absolute;
  width: 100%;
  height: 100%;
}

.hot-search>.search-header {
  display: flex;
  align-items: center;
  padding: 5rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fafafa;
}

.hot-search>.search-header>.search-input {
  align-items: center;
  width: 580rpx;
  padding:8rpx 10rpx;
}

icon {
  display: block;
}

.icon {
  height: 26rpx;
  padding: 13rpx 20rpx;
}

.search-input .input {
  display: block;
  line-height: 40rpx;
}

.search-input .input2 {
  width: 520rpx;
  line-height: 52rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.search-header>.cancel {
  width: 86rpx;
  font-size: 28rpx;
  text-align: right;
}

.search-item {
  font-size: 28rpx;
  padding: 32rpx;
}

.hot-search-hd {
  height: 40rpx;
  width: 100%;
}

.search-item-hd>.title {
  width: 112rpx;
  font-weight: bold;
}

.search-item-hd>view {
  width: 26rpx;
  height: 30rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/search-delete.png);
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
  float: right;
}

/* 搜索 End */

/* 搜索结果 Begin */

.search-result>.search-result-hd {
  position: fixed;
  width: 100%;
  background-color: #fafafa;
  z-index: 1000;
}
.search-result-hd>.search-header{
  padding: 5rpx 32rpx 20rpx;
}

/* 搜索结果 End */

.history-item:after, .history-list:after {
  content: '';
  display: block;
  clear: both;
}

.history-item {
  position: relative;
  float: left;
  max-width: 40%;
  padding-top: 30rpx;
  padding-right: 30rpx;
}

.history-text {
  display: block;
  max-width: 100%;
  border-radius: 6rpx;
  border: 1px solid #ccc;
  padding: 5rpx 13rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.history-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 10rpx;
}

.list-wrap {
  position: relative;
  min-height: 100%;
  padding-top: 200rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

.loading-container {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
}
