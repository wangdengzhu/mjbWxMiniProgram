button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 999;
}
.avatar {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  border: 2rpx solid #e9e9e9;
}
.personal-head text {
  margin-left: 18rpx;
  color: #fff;
  font-size: 34rpx;
}

.block .bind-wrap {
  font-size: 30rpx;
  color: #333;
  height: 100rpx;
}
.bind-btn {
  width:140rpx;
  height:58rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 58rpx;
  color: #ff681d;
  border-radius:8rpx;
  border:2rpx solid #ff681d;
}
.my-order-hd {
  font-size: 30rpx;
  color: #333;
}
.my-order-hd text {
  font-size: 28rpx;
  color: #666;
}
.my-order-category {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180rpx;
  padding: 0 32rpx;
}
.my-order-category view {
  position: relative;
  width: 78rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.my-order-category view .new {
  position: absolute;
  height: 30rpx;
  top: -10rpx;
  right: 6rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: #FF681D;
  color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
  width: 30rpx;
}
.my-order-category view .morewidth {
  border-radius: 15rpx;
  width: 40rpx;
}
.my-order-category view text {
  font-size: 26rpx;
  color: #333;
  margin-top: 13rpx;
}
.nav {
  font-size: 30rpx;
  color: #333;
}


.flexline {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.flexline .flex1 {
  flex: 1;
}
