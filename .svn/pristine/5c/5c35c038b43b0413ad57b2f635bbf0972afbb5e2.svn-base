/* pages/personal/personal.wxss */
.personal-wrap {
  height: 100vh;
  overflow-y: auto;
}
.grey {
  background-color: #f5f5f5;
  height: 20rpx;
}
.personal-head {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 260rpx;
  padding-left: 60rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/personal/personal_center_background.png?v=1);
  background-size: 100%;
}
