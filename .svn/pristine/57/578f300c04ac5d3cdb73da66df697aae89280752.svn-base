/* pages/address/manager.wxss */

page {
  background-color: #f5f5f5;
}
.address-manager-wrap {
  font-size: 28rpx;
  color: #333;
  padding-bottom: 100rpx;
}

.address-none {
  padding-top: 260rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.address-none image {
  width: 170rpx;
  height: 170rpx;
}

.address-none view {
  margin-top: 20rpx;
}

.address-manager-list {
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.form-order .address-top, .form-order .address-details {
  padding-left: 32rpx;
}


.address-top {
  padding: 20rpx 80rpx;
  line-height: 46rpx;
  font-size: 30rpx;
  clear: both;
}

.address-top:after {
  content: "";
  display: block;
  clear: both;
}

.address-name {
  float: left;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 32rpx;
}

.address-tel {
  float: left;
  margin-right: 32rpx;
}

.address-type {
  float: left;
  padding: 0 16rpx;
  margin-top: 6rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #3D86E8;
  border: 1px solid #3D86E8;
  border-radius: 6rpx;
}

.address-type.default {
  margin-right: 20rpx;
  color: #FF681D;
  border-color: #FF681D;
}

.address-details {
  padding: 0rpx 80rpx 30rpx;
  color: #666;
}

.address-default {
  position: absolute;
  top: 50%;
  left: 10rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
}

.address-default:before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30rpx;
  height: 30rpx;
  margin-top: -16rpx;
  margin-left: -16rpx;
  border: 1px solid #999;
  border-radius: 50%;
}

.address-default:after {
  content: "";
  position: absolute;
  z-index: 3;
  top: 22rpx;
  left: 20rpx;
  width: 20rpx;
  height: 10rpx;
  border-left: 1px solid #fff;
  border-bottom: 1px solid #fff;
  transform: rotate(-45deg);
}

.address-default.active:before {
  background-color: #FF681D;
  border-color: #FF681D;
}

.address-edit {
  position: absolute;
  top: 50%;
  right: 10rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
}

.address-edit:before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 36rpx;
  height: 36rpx;
  margin-top: -18rpx;
  margin-left: -18rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.address-new {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  background-color: #FF681D;
}

