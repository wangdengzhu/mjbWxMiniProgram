/* pages/cart/cartList.wxss */

page {
  background-color: #fff;
}

.cart-list-wrap {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
  color: #333;
  background-color: #fff;
}


.cart-none {
  padding-top: 260rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.cart-none image {
  width: 150rpx;
  height: 150rpx;
}

.cart-none view {
  margin-top: 20rpx;
}

.go-category {
  display: block;
  width: 240rpx;
  height: 60rpx;
  margin: 50rpx auto 0;
  line-height: 60rpx;
  text-align: center;
  color: #FF681D;
  border: 1px solid #FF681D;
  border-radius: 8rpx;
}

.cart-list {
  padding: 20rpx 0;
}

.cart-list-hidden {
  position: relative;
  height: 200rpx;
  width: 100%;
  overflow: hidden;
}

.cart-move {
  position: relative;
  display: block;
  padding: 0rpx 32rpx 0rpx 92rpx;
  background-color: #fff;
  transition: .3s left;
}

.cart-move:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}

.cart-del {
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #FF681D;
}

.cart-list-radio, .cart-list-radio2 {
  position: absolute;
  top: 50%;
  left: 25rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
}

.cart-list-radio:before {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
  border: 1px solid #ccc;
  border-radius: 40rpx;
}

.cart-list-radio.active:before {
  border-color: #FF681D;
  background-color: #FF681D;
}

.cart-list-radio.active:after {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 12rpx;
  margin-top: -8rpx;
  margin-left: -19rpx;
  border-bottom: 1px solid #fff;
  border-left: 1px solid #fff;
  transform: rotate(-45deg);
}

.cart-list-img {
  position: relative;
  float: left;
}

.cart-list-img .img {
  display: block;
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}

.cart-img-tit {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .3);
}

.cart-list-content {
  float: left;
  width: 400rpx;
  height: 200rpx;
  position: relative;
  padding-left: 24rpx;
}

.cart-list-title {
  font-size: 26rpx;
  line-height: 38rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow:ellipsis;
  overflow: hidden;
}

.cart-list-note {
  padding-top: 14rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #999;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow:ellipsis;
  overflow: hidden;
}

.cart-list-price {
  position: absolute;
  left: 24rpx;
  bottom: 0;
  line-height: 38rpx;
  font-size: 26rpx;
  color: #FF681D;
}

.cart-bottom {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 99rpx;
  font-size: 30rpx;
  padding-left: 92rpx;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, .3);
  box-sizing: border-box;
  background-color: #fff;
}

.cart-all-price {
  font-size: 28rpx;
}

.txt-color {
  color: #FF681D;
}

.cart-pay {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  margin: 0;
  border-radius: 0;
  padding: 0;
  background-color: #FF681D;
}

/* 失效商品 */
.cart-list-top {
  font-size: 28rpx;
  padding: 0 32rpx;
  line-height: 100rpx;
  border-top: 20rpx solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.clear-all {
  float: right;
  color: #666;
}


.cart-list2, .cart-list2 .cart-list-note {
  color: #ccc;
}

.cart-list2 {
  bottom-top: 20rpx solid #f5f5f5;
}

.cart-list2 image {
  filter: grayscale(100%);
}

.cart-list-radio2:before {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  background-color: #ccc;
}

.cart-list-radio2:after {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 10rpx;
  width: 24rpx;
  height: 1px;
  margin-top: 1px;
  background-color: #fff;
}
