/* pages/order/submitOrder/submitOrder.wxss */
page{
  background-color: #F5F5F5;
  padding-bottom: 98rpx;
}
.form{
  background-color: #ffffff;
}
.form .form-item{
    margin-bottom: 20rpx;
    padding:32rpx;
    background-color: #ffffff;
}
.form .form-item.noborder{
   margin-bottom: 0rpx;
}
.address-line-img{
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/address-line.png);
  background-repeat: no-repeat;
  background-size:cover;
  height: 5rpx;
  width: 750rpx;
  margin-bottom: 15rpx;
}
.address-wrap{
  display: flex;
  align-items: center;
}
.address-wrap>view:last-child{
    width: 80rpx;
    min-width: 80rpx;
    text-align: right;
}

.newadd-address
{
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
}
.newadd-address>view:first-child{
 flex-grow: 1; 
}
.newadd-address>view:last-child{
  width: 20rpx;
}

.current-address{
 flex-grow: 1; 
}
.current-address .address-contact{
  display: flex;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.current-address .address-contact>view:nth-child(n+2)
{
  margin-left: 32rpx;
}
.current-address .address-contact>view:nth-child(4)
{
  margin-left: 20rpx;
}
.current-address .address-contact .address-default,.current-address .address-contact .address-label{
  padding: 0 12rpx;
  height:30rpx;
  border-radius:6rpx;
  border:1px solid rgba(255,104,29,1);
  color: #FF681D;
  text-align: center;
  line-height: 30rpx;
  font-size: 22rpx;
  max-width: 120rpx;
  overflow: hidden;
}
.current-address .address-contact .address-label{
  border-color: #3D86E8;
  color: #3D86E8;
}
.address-info{
  color: #666666;
  font-size: 26rpx;
  word-wrap: break-word;
  word-break:break-all;
}

.form-item.goods{
  margin-bottom: 0;
}
.goods .goods-item{
  display: flex;
  /* margin-bottom: 32rpx; */
}
.goods .goods-item:nth-child(n+2){
  margin-top: 40rpx;
}
.goods .goods-picture{
  min-width: 200rpx;
  width:200rpx;
  height:200rpx;
  background:rgba(245,245,245,1);
}
.goods  .goods-content{
  flex-flow: 1;
  padding-left: 24rpx;
}
.goods  .goods-content .goods-spec{
  font-size: 22rpx;
  color: #999999;
  flex-grow: 1;
}
.goods .goods-content .goods-num{
  font-size: 26rpx;
  color: #333333;
  width: 50rpx;
  text-align: right;
}
.goods .goods-content .goods-title{
  color: #333333;
  font-size: 26rpx;
}
.goods .goods-content .goods-title+view{
    display: flex;
    padding: 16rpx 0rpx 20rpx;
}
.goods .goods-content .goods-price{
  color: #FF681D;
  font-size: 26rpx;
  margin-top: 25rpx;
}
 .goods-total{
   padding: 0 32rpx;
    background-color: #ffffff;
}
.goods-total>view{
   display: flex;
  font-size: 26rpx;
  color: #666666;
  justify-content: flex-end;
  align-items: center;
  height: 88rpx;
    border-top: 1px solid #F5F5F5;
        box-sizing: border-box;
}
.goods-total>view>view:last-child{
  margin-left: 20rpx;
}
.receipt{
    color: #666666;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    border-top: 1px solid #F5F5F5;
    padding: 0 32rpx;
    height: 88rpx;
    box-sizing: border-box;
}
.receipt>view:first-child{
  flex-grow: 1;
  color: #333333;
}
.receipt>view:nth-child(2){
  width:180rpx;
  margin-right: 15rpx;
  text-align: right;
}
.receipt>view:last-child{
  width: 20rpx;
}
.form-item.amount-total{
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 110rpx;
}
.amount-total>view{
    display: flex;
    align-content: center;
    justify-content:space-between;
}
.amount-total>view:last-child{
  color: #333333;
  font-size: 28rpx;
}
.amount-total>view:last-child>view:last-child{
  color: #FF681D;
}
.amount-total>view>view:last-child>view:last-child{
    margin-left: 10rpx;
    display: inline-block;
}
.amount-total>view:nth-child(n+2){
  margin-top: 12rpx;
}
.buttons-wrap{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 750rpx;
  z-index: 99;

}
.buttons-wrap .buttons{
  box-sizing: border-box;
  height: 98rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
   box-shadow:0px 0 1px 1px rgba(0,0,0,.05); 
}
.buttons>view{
}
.buttons>view:first-child{
  flex-grow: 1;
  color: #FF681D;
  font-size: 28rpx;
}
.buttons>view:first-child>view:first-child{
  float:right;
  margin-right: 42rpx;
}

.buttons .btn-buy{
  margin: 0;
  padding: 0;
  border-radius: 0;
  width: 200rpx;
  background-color: #FF681D;
  color: #ffffff;
  font-size: 30rpx;
  height: 100%;
  text-align: center;
  line-height:98rpx;
}
.buttons .btn-buy[loading]{
 background-color: rgba(255, 104, 29, 0.7);
}

.buttons .btn-buy::after{
  border: 0;
}
.goods-list{

}
.goods-list-title{
  text-align: center;
  padding: 0 0 15rpx;
  font-size: 30rpx;

}
.goods-list>.goods-item{
  display: flex;

}
.goods-list>.goods-item:nth-child(n+2){
  margin-top: 5rpx;
}
.goods-list>.goods-item .goods-picture{
  width: 80rpx;
  height: 80rpx;
}
.goods-list>.goods-item>view:last-child{
  font-size: 24rpx;
  color: #666666;
  margin-left: 20px;
}