/* pages/activity/activity.wxss */
.banner-wrap,
.banner-wrap image {
  display: block;
  width: 100%;
  height: 868rpx;
}
.content-wrap {
  background-size: 750rpx 484rpx;
  background-repeat: repeat;
}

.content {
  position: relative;
  width: 686rpx;
  margin: 0 auto;
  padding: 0 30rpx;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.content:before {
  content: "";
  position: absolute;
  top: -30rpx;
  left: 0;
  width: 100%;
  height: 40rpx;
  background-color: #fff;
  border-radius: 6rpx 6rpx 0 0;
  z-index: 99;
}
.item {
  position: relative;
  width: 300rpx;
  margin-bottom: 30rpx;
  z-index: 100;
}
.item .good-pic {
  width: 300rpx;
  height: 300rpx;
}

.good-title {
  font-size: 26rpx;
  color: #333;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 24rpx;
}
.sale-price {
  font-size: 26rpx;
  color: #333;
  margin-right: 32rpx;
}
.origin-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.footer-bg,
.footer-bg image {
  display: block;
  width: 100%;
  height: 48rpx;
}