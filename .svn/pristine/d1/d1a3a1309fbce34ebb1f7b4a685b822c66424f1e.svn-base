/* components/evaluateList/evaluateList.wxss */


.evaluate-header{
    display: flex;
    padding: 24rpx 30rpx;
      font-size: 26rpx;
      border-bottom: 1rpx solid rgba(229,229,229,1);
      background-color: #ffffff;
}
.evaluate-header.list{
  margin-bottom: 20rpx;
  border-bottom:0;
}

.evaluate-header>view:first-child{
    flex-grow: 1;
    color: #666666;
}
.evaluate-header>view:last-child{
    flex-grow: 1;
    display: flex;
    justify-content:flex-end;
    align-items: center;
}
.evaluate-header>view:last-child>view:nth-child(1){
  color: #333333;
 margin-right: 10rpx;
}
.evaluate-header>view:last-child>view:nth-child(2){
  color: #FF681D;
  margin-right: 24rpx;
}

.comment-wrapper{
font-size:26rpx;
}
.comment-item{
    background-color: #ffffff;
    padding-bottom: 36rpx;
    padding: 24rpx 30rpx 20rpx;
}
.comment-wrapper.list .comment-item{
  margin-bottom: 20rpx;
}
.user-info{
  padding:24rpx 0 10rpx;
  display: flex;
  align-items: center;
}
.user-info .head image{
    width:60rpx;
    height: 60rpx;
}
.user-info .nickname
{
    color: #333333;
    margin-left: 15rpx;
    flex-grow: 1;
}
.user-info .time{
  color: #999999;
  font-size: 26rpx;
  width: 230rpx;
  
}
.evaluate-star{

}
.text-ellipsis{
  color: #FF681D;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.text-ellipsis>view:first-child{
  width: 26rpx;
  height:26rpx;
}
.text-ellipsis>view:first-child::after{
  content: '';
  display: block;
  width: 13rpx;
  height: 13rpx;
  border:3rpx solid #FF681D;
  border-left:0;
  border-bottom:0;
  margin-top: 6rpx;
}
.text-ellipsis.expand>view:first-child::after{
  transform: rotate(135deg);
  margin-top: 2rpx;
}
.text-ellipsis.collapse>view:first-child::after{
  transform: rotate(-45deg);
  margin-top: 12rpx;
}


.comment{
    position:relative;
  color:#666666;
  padding:33rpx 0 0;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  max-height: 190rpx;
  overflow: hidden;

}
.comment.expand{
  max-height:none;
}

.comment.special{
  width: 690rpx;
  max-height: 75rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.piclist{
    margin-bottom: 20rpx;
}
.piclist.special{
    white-space: nowrap;
    overflow: hidden;
    height: 216rpx;
}
.piclist::after{
  content: '';
  display: block;
  clear: both;
}
.piclist image{
   min-width:216rpx;
   width:216rpx;
   height:216rpx;
   float: left;
   margin-right: 20rpx;
}
.piclist image:nth-child(3n){
     margin-right:0;
}
.piclist image:nth-child(4n){
     margin-top:20rpx;
}
.comment-item .cate{
  color: #999999;
  font-size: 24rpx;
}

.arrow-r{
  display: inline-block;
  width: 26rpx;
  height:26rpx;
}
.arrow-r::after{
  content: '';
  display: block;
  width: 13rpx;
  height: 13rpx;
  border:4rpx solid #999999;
  border-left:0;
  border-bottom:0;
 transform: rotate(45deg);
 margin-top: 6rpx;
}

