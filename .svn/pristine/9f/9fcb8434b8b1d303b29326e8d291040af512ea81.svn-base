/* pages/aftersale/list/list.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 72rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
}
.nav view {
  font-size: 30rpx;
  color: #333;
  line-height: 70rpx;
  border-bottom: 4rpx solid transparent;
}
.nav .on {
  color: #ff681d;
  border-bottom: 4rpx solid #ff681d;
}
page {
  min-height: 100%;
}
.list-wrap {
  background-color: #f5f5f5;
  position: absolute;
  top: 72rpx;
  bottom: 0; 
  left: 0;
  right: 0;
  box-sizing: border-box;
}
.list {
  background-color: #f5f5f5;
}
.no-order image {
  display: block;
  width: 164rpx;
  height: 111rpx;
  margin: 185rpx auto 30rpx;
}
.no-order text {
  font-size: 30rpx;
  display: block;
  text-align: center;
  color: #999;
}

.order-item {
   background-color: #fff; 
  margin-bottom: 20rpx;
}
.order-hd {
  margin: 0 32rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  border-bottom: 1rpx solid #e5e5e5;
}
.order-hd text:first-child {
  margin-right: 48rpx;
}
.goods-item-wrap {
  padding: 0 32rpx;
}
.goods-item-wrap:not(:last-child) {
  border-bottom: 1rpx solid #e5e5e5;
}
.btn-wrap {
  display: flex;
  justify-content: flex-end;
  padding: 24rpx 0;
  border-top: 1rpx solid #e5e5e5;
}
.btn-wrap .btn {
  width: 140rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ff681d;
  border: 2rpx solid #ff681d;
  border-radius: 6rpx;
}
.goods-info {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
}
.goods-info .goods-pic {
  width: 160rpx;
  height: 160rpx;
}
.goods-info .goods-pic image {
  display: block;
  width: 100%;
  height: 100%;
}
.goods-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  margin-left: 24rpx;
}

.goods-top {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}
.goods-title {
  flex: 1;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}
.goods-price {
  margin-left: 54rpx;
}

.goods-sub-title {
  flex: 1;
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.spec {
  font-size: 22rpx;
  color: #999;
}
.num {
  font-size: 26rpx;
  color: #333;
}

.goods-tips {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.no-aftersale .goods-title {
  color: #999;
}
.no-aftersale .num {
  color: #999;
}

.aftersale-list .order-hd {
  justify-content: space-between;
}
.aftersale-list .order-hd .order-status {
  font-size: 26rpx;
  color: #ff681d;
}