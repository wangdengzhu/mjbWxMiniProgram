/* pages/cart/cartList.wxss */

page {
  background-color: #fff;
}

.cart-list-wrap {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
  color: #333;
  background-color: #fff;
  overflow: hidden;
}


.cart-none {
  padding-top: 260rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.cart-none image {
  width: 150rpx;
  height: 150rpx;
}

.cart-none view {
  margin-top: 20rpx;
}

.go-category {
  display: block;
  width: 240rpx;
  height: 60rpx;
  margin: 50rpx auto 0;
  line-height: 60rpx;
  text-align: center;
  color: #FF681D;
  border: 1px solid #FF681D;
  border-radius: 8rpx;
}

.cart-list {
  position: relative;
  padding: 20rpx 0;
}

.cart-move {
  position: relative;
  display: block;
  padding: 0rpx 32rpx 0rpx 92rpx;
  background-color: #fff;
}

.cart-move:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}

.cart-del {
  position: absolute;
  top: 50%;
  right: 0;
  width: 120rpx;
  height: 200rpx;
  margin-top: -100rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #FF681D;
}

.cart-list-radio {
  position: absolute;
  top: 50%;
  left: 25rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
}

.cart-list-radio:before {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.cart-list-radio.active:before {
  border-color: #FF681D;
  background-color: #FF681D;
}

.cart-list-radio.active:after {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 12rpx;
  margin-top: -8rpx;
  margin-left: -19rpx;
  border-bottom: 1px solid #fff;
  border-left: 1px solid #fff;
  transform: rotate(-45deg);
}

.cart-list-img {
  position: relative;
  float: left;
}

.cart-list-img .img {
  display: block;
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}

.cart-img-tit {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .3);
}

.cart-list-content {
  float: left;
  width: 400rpx;
  height: 200rpx;
  position: relative;
  padding-left: 24rpx;
}

.cart-list-title {
  font-size: 26rpx;
  line-height: 38rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow:ellipsis;
  overflow: hidden;
}

.cart-list-note {
  padding-top: 14rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #999;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow:ellipsis;
  overflow: hidden;
}

.cart-list-price {
  position: absolute;
  left: 24rpx;
  bottom: 0;
  line-height: 38rpx;
  font-size: 26rpx;
  color: #FF681D;
}

.cart-bottom {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 99rpx;
  font-size: 30rpx;
  padding-left: 92rpx;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
  background-color: #fff;
}

.cart-all-price {
  font-size: 28rpx;
}

.txt-color {
  color: #FF681D;
}

.cart-pay {
  width: 200rpx;
  height: 100%;
  text-align: center;
  color: #fff;
  background-color: #FF681D;
}


