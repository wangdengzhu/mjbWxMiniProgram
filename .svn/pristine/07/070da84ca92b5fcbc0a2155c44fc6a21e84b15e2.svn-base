.arrow-r,.arrow-up,.arrow-down{
  display: inline-block;
  width: 26rpx;
  height:26rpx;
}
.arrow-r::after,.arrow-up::after,.arrow-down::after{
  content: '';
  display: block;
  width: 13rpx;
  height: 13rpx;
  border:2rpx solid #999999;
 transform: rotate(45deg);
 margin-top: 6rpx;
}
.arrow-r::after{
  border-left:0;
  border-bottom:0;
}
.arrow-up::after{
  border-right:0;
  border-bottom:0;
}
.arrow-down::after{
   border-left:0;
    border-top:0;
}
