/* pages/evaluate/evaluate.wxss */
@import "/components/evaluateList/evaluateGoods.wxss";
.container {
  color: #333;
}

.eval-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}

.eval-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 146rpx;
  font-size: 28rpx;
  height: 72rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.eval-title text.active {
  color: #ff681d;
  padding: 16rpx 0;
  border-bottom: 4rpx solid #ff681d;
}
/* 待评价 */
.logis-empty{
  position: absolute;
  top:-100rpx;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap:wrap;
  text-align: center;
}
.logis-empty image{
  width: 150rpx;
  height: 150rpx;
}
.empty-text{
  font-size: 30rpx;
  color: #999;
  padding-top:32rpx;
  padding-bottom: 53rpx;
}
.look-around{
  font-size: 28rpx;
  background-color: #fff;
  color: #ff681d;
  margin-top: 50rpx;
}
.look-around::after{
  border-color: #ff681d;
}
/* 已评价 */

.evaluated {
  background-color: #fff;
}

.eval-item {
  padding: 24rpx 32rpx;
  font-size: 26rpx;
  background-color: #fff;
}

.eval-item:not(:last-child) {
  margin-bottom: 20rpx;
}

.eval-info {
  border-bottom: 2rpx solid #e5e5e5;
}

.ev-personInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.per-info {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.per-info image {
  width: 60rpx;
  height: 100%;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.per-name {
  margin-left: 16rpx;
}

.ev-date {
  color: #999;
}

.ev-start {
  color: #ccc;
  font-size: 40rpx;
}

.ev-start text {
  margin-right: 15rpx;
}

.ev-start text.active {
  color: #ff681d;
}

.ev-content {
  position: relative;
  padding-bottom: 32rpx;
  font-size: 26rpx;
  overflow: hidden;
}

.ev-content-btn {
  position: absolute;
  left: 0;
  top: 196rpx;
  color: #ff681d;
}

.ev-content-btn:after, .ev-content-btn.drop:after {
  content: "";
  position: absolute;
  top: 50%;
  right: -26rpx;
  width: 12rpx;
  height: 12rpx;
  margin-top: -12rpx;
  border-top: 1px solid #ff681d;
  border-right: 1px solid #ff681d;
}

.ev-content-btn:after {
  margin-top: -4rpx;
  transform: rotate(-45deg);
}

.ev-content-btn.drop:after {
  transform: rotate(135deg);
}

.ev-content text {
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  padding-top: 24rpx;
  text-overflow: ellipsis;
  overflow : hidden;
}

.ev-content2 text {
  display: block;
}

.ev-content2 .ev-content-btn {
  top: auto;
  left: auto;
}

.ev-pic {
  padding-top: 14rpx;
}

.ev-pic image {
  width: 212rpx;
  height: 212rpx;
  background-color: #e5e5e5;
}

 .ev-pic image:nth-child(3n-1) {
   margin:0 24rpx;
}


.ev-format {
  color: #999;
  font-size: 22rpx;
  padding: 24rpx 0;
}

.eval-item .goodslist-item {
  padding: 24rpx 0 20rpx;
}
