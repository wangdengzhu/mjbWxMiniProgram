/* pages/logistics/logistics.wxss */

.logistics-top {
  align-items: center;
  height: 88rpx;
  width: 100%;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
}

.logistics-move {
  position: relative;
  width: 999999rpx;
  height: 88rpx;
  margin-bottom: -1px;
}

.logistics-move>view {
  float: left;
  width: 160rpx;
  line-height: 88rpx;
  text-align: center;
}

.logistics-move>view text {
  display: block;
  width: 80rpx;
  margin: 0 auto;
}

.logistics-move view.active text {
  color: #ff681d;
  border-bottom: 1px solid #ff681d;
}

.logistics-box {
  background-color: #f5f5f5;
  font-size: 30rpx;
}

.logistics-info {
  background-color: #fff;
  display: flex;
  align-items: center;
}

.logistics-info image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  margin: 70rpx 30rpx;
}

.status {
  font-size: 34rpx;
  color: #333;
  padding-bottom: 18rpx;
}

.info {
  color: #666;
  font-size: 28rpx;
  padding-top: 6rpx;
}

.logistics-detail {
  margin-top: 15rpx;
  background-color: #fff;
  font-size: 26rpx;
}

.detail-item {
  position: relative;
  padding: 0rpx 80rpx 60rpx;
}

.detail-item::before {
  position: absolute;
  content: '';
  top: 10rpx;
  left: 33.5rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #666;
  z-index: 9;
}

.detail-item.finish::before {
  position: absolute;
  content: '';
  top: 10rpx;
  left: 20rpx;
  width: 44rpx;
  height: 44rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/signed.png);
  background-size: 100%;
  background-repeat: no-repeat;
  z-index: 9;
}

.detail-item.active::before {
  background-color: #ff681d;
}

.detail-item:not(:last-child)::after {
  position: absolute;
  content: '';
  top: 20rpx;
  left: 45rpx;
  background-color: #999;
  width: 2rpx;
  height: 100%;
  z-index: 0;
}

.no-logistics {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  background-color: #fff;
  color: #ff681d;
  font-size: 28rpx;
  padding: 38rpx 0 38rpx 38rpx;
}

.no-logistics .no-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  background-color: #ff681d;
  box-shadow: 0px 0px 0px 1px #ff681d;
  margin-right: 20rpx;
}

