/* pages/brand/brandGoods/brandGoods.wxss */

.header {
  position: relative;
}
.header .banner {
  display: block;
  width: 100%;
  height: 220rpx;
}
.header .logo {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 120rpx;
  left: 32rpx;
  box-shadow: 0px 2rpx 8rpx 0px rgba(0,0,0,0.2);
  border-radius: 6rpx; 
}
.description {
  position: relative;
  width: 100%;
  padding: 58rpx 36rpx 56rpx 32rpx;
  font-size: 26rpx;
  color: #999;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}
.more2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.loading-container {
  margin-top: 20rpx;
}

.icon-wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 16rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon {
  width: 28rpx;
  height: 16rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/bottom_arrow_icon.png);
  background-size: 100%;
  background-repeat: no-repeat;
}
.icon.up {
  transform: rotateX(180deg)
}

.no-goods image {
  display: block;
  width: 164rpx;
  height: 162rpx;
  margin: 322rpx auto 41rpx;
}
.no-goods view {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}