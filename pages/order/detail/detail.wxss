/* pages/order/detail/detail.wxss */

.order-detail-wrap {
  background: #f5f5f5;
  padding-bottom: 128rpx;
}
.order-detail-wrap>view {
  background: #fff;
}
.order-detail-wrap .order-detail-state {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  padding: 0 76rpx 0 32rpx;
  box-sizing: border-box;
  background:linear-gradient(90deg,rgba(248,154,42,1),rgba(255,118,29,1));
}

.state-wrap {
  padding-top: 40rpx;
  color: #fff;
}
.state-text {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}
.state-sub {
  font-size: 26rpx;
}
.state-icon {
  /* width: 200rpx;
  height: 180rpx; */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
}
.state-wait-pay {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-wait-pay.png?v=1);
}
.state-wait-deliver {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-wait-delivery.png?v=1);
}
.state-refunding {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-refunding.png?v=1);
}
.state-completed {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-completed.png?v=1);
}
.state-closed {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-closed.png?v=1);
}
.state-wait-receive {
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/order-wait-receive.png?v=1);
}

.order-detail-deliver {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
}
.order-detail-deliver .text-wrap {
  flex: 1;
  font-size: 26rpx;
}
.order-detail-deliver .deliver-state {
  font-size: 28rpx;
  color: #3cb034;
  width: 580rpx;
}
.deliver-time {
  margin-top: 14rpx;
}
.order-detail-deliver .right-icon {
  width: 16rpx;
  height: 28rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/right_icon.png);
  background-size: 100%;
  background-repeat: no-repeat;
}

.order-detail-addr {
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
}
.order-detail-addr .order-user {
  font-size: 28rpx;
}
.order-detail-addr .order-user text {
  margin-right: 32rpx;
}
.order-detail-addr .addr {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #666;
}
.order-detail-addr .edit {
  width: 34rpx;
  height: 34rpx;
  margin-left: 49rpx;
  background-image: url(https://devskin.manjd.net/miniprogram/images/order/modify.png?v=1);
  background-size: 100%;
  background-repeat: no-repeat;
}

.order-detail-goodslist {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.goods-item:not(:last-child) {
  margin-bottom: 32rpx;
}
.goods-item {
  display: flex;
  justify-content: space-between;
}
.goods-item image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 24rpx;
}
.goods-item .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item .goods-info .title {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.sub-title {
  flex: 1;
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
}
.sub-title .spec {
  font-size: 22rpx;
  color: #999;
}
.sub-title .num {
  font-size: 26rpx;
}
.goods-info .sales {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-info .sales .price {
  font-size: 26rpx;
  color: #ff681d;
  flex: 1;
}
.goods-info .sales .btn {
  width:130rpx;
  height:50rpx;
  border-radius:8rpx;
  border:1px solid #ccc;
  color: #666;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.order-invoice {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  font-size: 26rpx;
  padding: 0 32rpx;
  margin-bottom: 20rpx;
}
.order-invoice .apply-invoice {
  color: #2D75F4;
}
.order-invoice .look-invoice {
  color: #2D75F4;
}

.order-price-wrap {
  padding: 24rpx 32rpx 0;
  margin-bottom: 20rpx;
}
.order-price-wrap view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.order-price-wrap .order-price {
  justify-content: flex-end;
  height: 80rpx;
  border-top: 1rpx solid #e5e5e5;
}
.order-price-wrap .order-price .price {
  font-size: 30rpx;
  color: #FF681D;
  margin-left: 40rpx;
}
.order-total-price {
  margin-bottom: 10rpx;
}
.order-deliever-price {
  margin-bottom: 10rpx;
}
.order-usedincome-price {
  margin-bottom: 24rpx;
}
.order-info {
  padding: 24rpx 32rpx;
  font-size: 24rpx;
  color: #666;
}
.order-info view {
  margin-bottom: 8rpx;
}
.order-info view text {
  margin-left: 40rpx;
}

.fixed-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 108rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.fixed-footer view,
.fixed-footer .detailpage-btn button {
  width:140rpx;
  height:60rpx;
  border-radius:8rpx;
  border: 2rpx solid #999;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  margin-right: 32rpx;
  color: #666;
}
.fixed-footer .detailpage-btn button {
  margin-left: 0;
}
.fixed-footer view:last-child,
.fixed-footer .detailpage-btn button {
  color: #FF681D;
  border: 2rpx solid #FF681D;
}

.order-detail-goodslist navigator:not(:last-child) {
  margin-bottom: 40rpx;
}